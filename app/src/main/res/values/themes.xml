<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Fullscreen themes-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AppCompat.Dark.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Application themes  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!-- color palette -->
        <item name="colorPrimary">@color/red500</item>
        <item name="colorPrimaryDark">@color/red700</item>
        <item name="colorAccent">@color/red300</item>
        <item name="colorCardBackground">@color/red50</item>
        <item name="colorCardHighlight">@color/red100</item>
        <item name="android:textColorPrimary">@color/black1000</item>
        <item name="android:textColorSecondary">@color/red900</item>

        <!-- default theme override -->
        <item name="android:textColorTertiary">?android:textColorPrimary</item>
        <item name="android:textColorLink">?colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <!-- custom themed attributes -->
        <item name="titleTextSize">@dimen/text_size_medium</item>
        <item name="subtitleTextSize">@dimen/text_size_small</item>
        <item name="contentTextSize">@dimen/text_size_small</item>
    </style>



    <!-- =================== -->
    <!-- Alert dialog themes -->
    <!-- =================== -->
    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/red400</item>
        <item name="colorAccent">@color/redA200</item>
        <item name="android:textColorPrimary">@color/blackT87</item>
        <item name="android:textColorSecondary">@color/grey500</item>
        <item name="android:textColorTertiary">?android:textColorPrimary</item>
        <item name="android:textColorLink">?colorAccent</item>
        <item name="colorCardBackground">@color/grey100</item>
        <item name="colorCardHighlight">@color/red100</item>
    </style>

    <style name="AppAlertDialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/redA100</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey500</item>
        <item name="android:textColorTertiary">?android:textColorPrimary</item>
        <item name="android:textColorLink">?colorAccent</item>
        <item name="colorCardBackground">@color/cardview_dark_background</item>
        <item name="colorCardHighlight">@color/grey800</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/red100</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DashboardTheme" parent="Theme.AppCompat.Dark.NoActionBar.FullScreen">
        <item name="android:background">@color/grey900</item>
        <item name="colorPrimary">@color/grey50</item>
        <item name="colorAccent">@color/grey50</item>
        <item name="android:textColor">@color/white1000</item>
        <item name="android:textColorSecondary">@color/grey50</item>
    </style>
</resources>