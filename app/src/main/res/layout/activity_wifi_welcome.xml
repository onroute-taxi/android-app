<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.enamakel.backseattester.activities.WifiWelcomeActivity">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black1000">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/game_of_thrones"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:foregroundGravity="center_horizontal">

            <LinearLayout
                android:id="@+id/wifiInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <include layout="@layout/item_login_advanced"></include>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/promptFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:background="@drawable/layout_wifi_prompt"
                android:foregroundGravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <com.enamakel.backseattester.views.TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Connect to the OnRoute Wifi"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>