<RelativeLayout
    android:id="@+id/toolba_layout"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_marginLeft="60dp"
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/app_name"/>

    <ImageButton
        android:id="@+id/toolbar_button"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_menu_white_24dp"/>

    <View
        android:id="@+id/leftOfButtonView"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_toLeftOf="@id/toolbar_button"
        android:layout_toStartOf="@id/toolbar_button"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/toolbar_hourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text="1:30 PM"
        android:layout_toLeftOf="@id/leftOfButtonView"
        android:layout_toStartOf="@id/leftOfButtonView"/>

    <View
        android:id="@+id/leftOfHourText"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_toLeftOf="@id/toolbar_hourTextView"
        android:layout_toStartOf="@id/toolbar_hourTextView"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/toolbar_dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text="18 February 2016"
        android:layout_toLeftOf="@id/leftOfHourText"
        android:layout_toStartOf="@id/leftOfHourText"/>
</RelativeLayout>